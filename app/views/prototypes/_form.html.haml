= form_for @prototype, html: {class: 'container proto-new'} do |f|
  - if @prototype.errors.any?
    #error_explanation
      %h2= "#{pluralize(@prototype.errors.count, "error")} prohibited this prototype from being saved:"
      %ul
        - @prototype.errors.full_messages.each do |message|
          %li= message
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        = f.text_field :title, class:"proto-new-title", placeholder:"Title"
    = f.fields_for :images do |image_fields|
      .row
        .col-md-12
          .cover-image-upload
            = image_fields.file_field :image
            -# %input{type: "file"}/
        -# .col-md-12
        -#   %ul.proto-sub-list.list-group
        -#     %li.list-group-item.col-md-4
        -#       .image-upload
        -#         = image_fields.file_field :image
        -#     %li.list-group-item.col-md-4
        -#       .image-upload
        -#         = image_fields.file_field :image
        -#     %li.list-group-item.col-md-4
        -#       .image-upload-plus
        -#         %span +
    .row.proto-description
      .col-md-12
        = f.text_field :catch, placeholder:"Catch Copy"
      .col-md-12
        = f.text_area :concept, placeholder:"Concept"
      .col-md-12
        %h4 Tag List
        .row
          .col-md-3
            = f.label :tag_list, class: "sr-only control-label"
            = text_field_tag @prototype.tag_list.join(",")
            = text_field_tag 'prototype[tag_list]', @prototype.tag_list.join(","), placeholder:"UI"
          .col-md-3
            %input{type: "text", placeholder: "Application"}/
    .row.text-center.proto-btn
      %button.btn.btn-lg.btn-primary.btn-block{type: "submit"} Publish
