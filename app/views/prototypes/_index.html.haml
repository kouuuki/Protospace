.jumbotron
  .container.text-center
    = image_tag("header_logo.png", alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "73px")

.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li{role: "presentation"}
          = link_to "Popular PROTO",root_path
        %li{role: "presentation"}
          = link_to "Newest PROTO",popular_newest_path
      %button{type: "button", class: "btn btn-default col-lg-1"} View Tags

.container.proto-list
  .row
    - @prototypes.each do |prototype|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          - prototype.images.each do |image|
            = link_to image_tag image.image
          .caption
            %h3= link_to prototype.title, prototype_path(prototype)
            .proto-meta
              .proto-user
                = link_to prototype.user.name, user_path(prototype.user.id)
              .proto-posted
                Apr 26
            %ul.proto-tag-list.list-inline
              - prototype.tags.each do |tag|
                %li
                  = link_to tag.name, root_path, class: "btn btn-default"

.text-center
  = paginate @prototypes
